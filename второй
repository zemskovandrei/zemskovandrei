from selenium import webdriver
from selenium.webdriver.common.by import By
import time

# Инициализация драйвера браузера (Chrome)
driver = webdriver.Chrome()

# Открытие главной страницы
driver.get("ССЫЛКА_НА_ГЛАВНУЮ_СТРАНИЦУ")

# Ждем, пока страница загрузится
time.sleep(2)

try:
    # Проверка заголовка страницы
    page_title = driver.title
    assert "ОЖИДАЕМЫЙ_ЗАГОЛОВОК_СТРАНИЦЫ" in page_title

    # Проверка наличия элементов главной страницы, например, логотипа, меню, футера и т.д.
    logo_element = driver.find_element(By.XPATH, "//img[@alt='Логотип']")
    assert logo_element.is_displayed()

    menu_element = driver.find_element(By.XPATH, "//ul[@id='main-menu']")
    assert menu_element.is_displayed()

    footer_element = driver.find_element(By.XPATH, "//footer")
    assert footer_element.is_displayed()

    # Другие проверки, которые необходимо выполнить

    print("Все тесты на главную страницу пройдены успешно!")
except AssertionError as e:
    print("Тест на главную страницу не пройден:", e)

# Закрытие браузера
driver.quit()
